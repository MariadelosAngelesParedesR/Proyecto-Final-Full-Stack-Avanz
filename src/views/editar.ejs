<%- include('partials/header'); -%>
<h1 class="text-center">Editar Noticia</h1>
<form action="/editar/<%= resultado.id %>" method="POST" class="col-md-4 mx-auto">
	<div class="mb-3">
		<label for="titulo">Título</label>
		<input type="text" name="titulo" id="titulo" class="form-control" value="<%= resultado.titulo %>" required/>
	</div>
	<div class="mb-3">
		<label for="descripcion">Descripción</label>
		<textarea
			name="descripcion"
			id="descripcion"
			rows="3"
			class="form-control"
            required
            ><%= resultado.descripcion %></textarea>
	</div>
	<div class="mb-3">
		<input type="submit" value="Editar" class="btn btn-primary btn-block" />
	</div>
</form>
<%- include('partials/footer'); -%>